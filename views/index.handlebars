<div class="container">
    <div class="jumbotron">
        <h1 class="text-center"><span class="glyphicon glyphicon-fire"></span>Eat Da Burger<span
                class="glyphicon glyphicon-fire"></span></h1>
    </div>
    <div class="row mainrow">
        <div class="col-md-6">
            <h2>Burgers that need to be eaten!</h2>
            {{#each burgers}}
                {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                {{/unless}}
            {{/each}}
        </div>
        <div class="col-md-6">
            <h2>You have eaten these burgers!</h2>
            {{#each burgers}}
                {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                {{/if}}
            {{/each}}
        </div>
    </div>

    <div class="row">
        <div class="col-md-2"></div>
        <div align="center" class="col-md-8">
            <h2>Add a Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <input type="text" id="brg" name="name" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-danger">Add Burger</button>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

